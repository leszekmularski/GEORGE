                        boolZmian = szuk.Zmiana;
                        boolUsuniecia = szuk.Usuniecie;
                        boolAdmin = szuk.Administrator;
                        boolNowy = szuk.Zapis;
                        RowIdPracownika = szuk.RowId;

                        Console.WriteLine($"{boolAdmin} || {boolZmian} || {boolNowy}");
                    }
                }
            }
        }
    }
