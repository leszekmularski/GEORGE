            }
        }
        catch (Exception ex)
        {
            // Handle exceptions (e.g., log the error or show an error message)
            Console.WriteLine($"Błąd przy zapisie: {ex.Message}");
            jakiBlad = $"Błąd przy zapisie: {ex.Message}";
        }
