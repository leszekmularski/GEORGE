<script>
    window.oknoKonfiguracja = [];

    window.dodajElementDoOkna = (modelName, x, y, szerokosc, wysokosc, imageSrc) => {
        let element = {
            modelName: modelName,
            x: x,
            y: y,
            szerokosc: szerokosc,
            wysokosc: wysokosc,
            imageSrc: imageSrc
        };

        window.oknoKonfiguracja.push(element);
        window.RysujOkno();
    };

    window.RysujOkno = () => {
        let canvas = document.getElementById("final-window");
        let ctx = canvas.getContext("2d");

        // Czyszczenie płótna przed ponownym rysowaniem
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // Rysowanie każdego elementu
        window.oknoKonfiguracja.forEach(element => {
            let img = new Image();
            img.src = element.imageSrc;
            img.onload = function () {
                ctx.drawImage(img, element.x, element.y, element.szerokosc, element.wysokosc);
            };
        });
    };

    window.dodajKsztalt = (ksztalt, szerokosc, wysokosc, kolor, czyWypelnienie) => {
        let canvas = document.getElementById("final-window");
        let ctx = canvas.getContext("2d");

        // Automatyczne dopasowanie rozmiaru (80% szerokości i wysokości canvas)
        let maxWidth = canvas.width * 0.8;
        let maxHeight = canvas.height * 0.8;
        szerokosc = Math.min(szerokosc, maxWidth);
        wysokosc = Math.min(wysokosc, maxHeight);

        // Obliczenie środka canvas
        let x = (canvas.width - szerokosc) / 2;
        let y = (canvas.height - wysokosc) / 2;

        ctx.strokeStyle = kolor;
        ctx.lineWidth = 3;
        ctx.fillStyle = czyWypelnienie ? kolor : "transparent";

        switch (ksztalt) {
            case "prostokat":
                if (czyWypelnienie) ctx.fillRect(x, y, szerokosc, wysokosc);
                ctx.strokeRect(x, y, szerokosc, wysokosc);
                break;

            case "trojkat":
                ctx.beginPath();
                ctx.moveTo(x + szerokosc / 2, y);
                ctx.lineTo(x + szerokosc, y + wysokosc);
                ctx.lineTo(x, y + wysokosc);
                ctx.closePath();
                if (czyWypelnienie) ctx.fill();
                ctx.stroke();
                break;

            case "okrag":
                ctx.beginPath();
                ctx.arc(canvas.width / 2, canvas.height / 2, szerokosc / 2, 0, Math.PI * 2);
                if (czyWypelnienie) ctx.fill();
                ctx.stroke();
                break;

            case "trapez":
                ctx.beginPath();
                ctx.moveTo(x + szerokosc * 0.2, y);
                ctx.lineTo(x + szerokosc * 0.8, y);
                ctx.lineTo(x + szerokosc, y + wysokosc);
                ctx.lineTo(x, y + wysokosc);
                ctx.closePath();
                if (czyWypelnienie) ctx.fill();
                ctx.stroke();
                break;

            case "romb":
                ctx.beginPath();
                ctx.moveTo(x + szerokosc / 2, y);
                ctx.lineTo(x + szerokosc, y + wysokosc / 2);
                ctx.lineTo(x + szerokosc / 2, y + wysokosc);
                ctx.lineTo(x, y + wysokosc / 2);
                ctx.closePath();
                if (czyWypelnienie) ctx.fill();
                ctx.stroke();
                break;

            case "piksel":
                ctx.fillRect(canvas.width / 2, canvas.height / 2, 1, 1);
                break;
        }
    };


</script>


