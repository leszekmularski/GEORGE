@using GEORGE.Client.Pages.Models

@if (Model == null)
{
    <p class="text-muted">Brak danych do edycji okna.</p>
}
else
{
    <EditForm Model="Model">
        <DataAnnotationsValidator />

        <AntDesign.Row Gutter="16">

            <AntDesign.Col Span="12">
                <h5>Wymiary</h5>

                <div class="mb-2">
                    <label>Szerokość [mm]</label>
                    <AntDesign.InputNumber @bind-Value="Model.Szerokosc" Style="width: 100%;" />
                </div>

                <div class="mb-2">
                    <label>Wysokość [mm]</label>
                    <AntDesign.InputNumber @bind-Value="Model.Wysokosc" Style="width: 100%;" />
                </div>

                <h5 class="mt-3">Kolorystyka</h5>

                <div class="mb-2">
                    <label>Kolor zewnętrzny</label>
                    <AntDesign.Input @bind-Value="Model.KolorZewnetrzny" />
                </div>

                <div class="mb-2">
                    <label>Kolor wewnętrzny</label>
                    <AntDesign.Input @bind-Value="Model.KolorWewnetrzny" />
                </div>

                <div class="mb-2">
                    <label>Kolor szyby</label>
                    <AntDesign.Input @bind-Value="Model.KolorSzyby" />
                </div>
            </AntDesign.Col>

            <AntDesign.Col Span="12">
                <h5>Szczegóły techniczne</h5>

                <div class="mb-2">
                    <label>Typ szyby</label>
                    <AntDesign.Input @bind-Value="Model.TypSzyby" />
                </div>

                <div class="mb-2">
                    <label>Typ klamki</label>
                    <AntDesign.Input @bind-Value="Model.TypKlamki" />
                </div>

                <div class="mb-2">
                    <label>Typ uszczelek</label>
                    <AntDesign.Input @bind-Value="Model.TypUszczelek" />
                </div>

                <div class="mb-2">
                    <label>Typ osłon przeciwsłonecznych</label>
                    <AntDesign.Input @bind-Value="Model.TypOslonPrzeciwsłonecznych" />
                </div>

                <div class="mb-2">
                    <label>Typ montażu</label>
                    <AntDesign.Input @bind-Value="Model.TypMontazu" />
                </div>

                <h5 class="mt-3">Parametry cieplne</h5>

                <div class="mb-2">
                    <label>Grubość pakietu</label>
                    <AntDesign.InputNumber @bind-Value="Model.GruboscPakietu" Style="width: 100%;" />
                </div>

                <div class="mb-2">
                    <label>Uw szyby</label>
                    <AntDesign.InputNumber @bind-Value="Model.WspolczynnikPrzepuszczalnosciCieplaSzyby" Style="width: 100%;" />
                </div>

                <div class="mb-2">
                    <label>Uw okna</label>
                    <AntDesign.InputNumber @bind-Value="Model.WspolczynnikPrzepuszczalnosciCieplaOkna" Style="width: 100%;" />
                </div>
            </AntDesign.Col>

        </AntDesign.Row>

    </EditForm>
}

@code {
    [Parameter]
    public ConstWlasciwosciOkna? Model { get; set; }

    [Parameter]
    public EventCallback<ConstWlasciwosciOkna> OnSave { get; set; }

    public async Task ZapiszDoRodzica()
    {
        await OnSave.InvokeAsync(Model);
    }
}
